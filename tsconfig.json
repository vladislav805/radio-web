{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": true,
        "lib": ["dom", "es5", "esnext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es2019",
        "allowJs": false,
        "strict": false,
        "sourceMap": true,
        "removeComments": false,
        "baseUrl": "src",
        "importsNotUsedAsValues": "error"
    },
    "include": [
        "src/**/*"
    ]
}

{
    "compilerOptions": {
        "jsx": "react",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "lib": ["dom", "es5", "esnext"],
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es2019",
        "allowJs": false,
        "isolatedModules": true,
        "strict": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": false,
        "baseUrl": ".",
        "verbatimModuleSyntax": true,
        "paths": {
            "@components/*": ["src/client/components/*"],
            "@lib/*": ["src/client/lib/*"],
            "@typings": ["src/typings"],
            "@typings/*": ["src/typings/*"],
            "@server/*": ["src/server/*"]
        }
    }
}
